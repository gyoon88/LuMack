<Window x:Class="LuMack.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LuMack.Views"
        xmlns:viewModels="clr-namespace:LuMack.ViewModels"
        mc:Ignorable="d"
        Title="LuMack - Mask Labeling Tool" Height="800" Width="1200">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <DockPanel Background="Black">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Image" Command="{Binding OpenImageCommand}"/>
                <MenuItem Header="_Load Recipe" Command="{Binding LoadRecipeCommand}"/>
                <MenuItem Header="_Save Mask" Command="{Binding SaveMaskCommand}"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_File">
                <MenuItem Header="_Open Image" Command="{Binding OpenImageCommand}"/>
                <MenuItem Header="_Load Recipe" Command="{Binding LoadRecipeCommand}"/>
                <MenuItem Header="_Save Mask" Command="{Binding SaveMaskCommand}"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_File">
                <MenuItem Header="_Open Image" Command="{Binding OpenImageCommand}"/>
                <MenuItem Header="_Load Recipe" Command="{Binding LoadRecipeCommand}"/>
                <MenuItem Header="_Save Mask" Command="{Binding SaveMaskCommand}"/>
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Margin="5" Background="{StaticResource PrimaryGrayBrush}">            <StatusBarItem>
                <TextBlock Text="{Binding MousePositionText, FallbackValue='X: ---, Y: ---'}" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding PixelValueText, FallbackValue='R:--- G:--- B:--- (GV:---)'}" Foreground="White"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding ZoomLevelText, FallbackValue='Zoom: 100%'}" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <Border x:Name="ImageBorder" Grid.Column="0" ClipToBounds="True" Background="{StaticResource PrimaryGrayBrush}" Margin="10"
                    MouseMove="MainImage_MouseMove" 
                    MouseLeftButtonDown="MainImage_MouseLeftButtonDown" 
                    MouseLeftButtonUp="MainImage_MouseLeftButtonUp" 
                    MouseWheel="MainImage_MouseWheel"
                    MouseRightButtonDown="MainImage_MouseRightButtonDown"
                    SizeChanged="ImageBorder_SizeChanged">
                <Grid>
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="ImageScaleTransform" CenterX="0" CenterY="0" />
                            <TranslateTransform x:Name="ImageTranslateTransform" />
                        </TransformGroup>
                    </Grid.RenderTransform>
                    
                    <Image x:Name="MainImage" Source="{Binding MainImage}" Stretch="Uniform" SizeChanged="MainImage_SizeChanged" />

                    <ItemsControl x:Name="MasksControl" ItemsSource="{Binding Masks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Path Data="{Binding MaskGeometry}" 
                                      Fill="{Binding DisplayColor, Converter={StaticResource ColorToBrushConverter}}" 
                                      Opacity="0.5"
                                      Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Path.Style>
                                        <Style TargetType="Path">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                                    <Setter Property="Stroke" Value="{StaticResource AccentGradientBrush}" />
                                                    <Setter Property="StrokeThickness" Value="2" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Path.Style>
                                </Path>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <DockPanel Grid.Column="1" Margin="0, 5, 10, 10">
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,0">
                    <TextBlock Text="Mask Layers" FontWeight="Bold" VerticalAlignment="Center" Foreground="White"/>
                    <ToggleButton Content="Edit Mode" IsChecked="{Binding IsEditMode}" Margin="10,0,0,0"/>
                </StackPanel>
                <ListBox ItemsSource="{Binding Masks}" 
                         SelectedItem="{Binding SelectedMask, Mode=TwoWay}"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1" Padding="5" Margin="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding IsVisible}" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="5,0" BorderThickness="0" Background="Transparent"/>
                                    <Rectangle Grid.Row="0" Grid.Column="2" Width="16" Height="16" Fill="{Binding DisplayColor, Converter={StaticResource ColorToBrushConverter}}" Stroke="Black" StrokeThickness="1"/>

                                    <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0"
                                              ItemsSource="{Binding DataContext.ClassLabels, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                              SelectedItem="{Binding ClassLabel}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>


